{% extends "base.njk" %}
{% block title %}Home - ResearchRoomies{% endblock %}
{% block content %}
<div class="home-layout">
  <aside class="sidebar">
    <form action="/search" method="get">
      <input type="text" name="conference" placeholder="Search conferences" />
      <select name="tag">
        <option value="">Subject</option>
        {% for tag in tags %}<option value="{{ tag.slug }}">{{ tag.name }}</option>{% endfor %}
      </select>
      <input type="date" name="start" />
      <input type="date" name="end" />
      <button type="submit">Search</button>
    </form>
  </aside>
  <section class="main">
    <h2>Featured Conferences</h2>
    <div id="featured-conferences" 
         hx-get="/api/featured-conferences" 
         hx-trigger="load"
         hx-indicator="#loading-indicator">
      <div id="loading-indicator" class="htmx-indicator">
        Loading featured conferences...
      </div>
    </div>
  </section>
</div>
{% endblock %}